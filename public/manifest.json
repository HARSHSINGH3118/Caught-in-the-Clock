{
  "manifest_version": 3,
  "name": "Caught in the Clock",
  "version": "1.0",
  "description": "Tracks time spent on websites and stores browsing history.",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "clock.png",
      "48": "clock.png",
      "128": "default-favicon.png"
    }
  },
  "chrome_url_overrides": {
    "history": "history.html"
  }
}
